#!/bin/sh
set -e
echo "Installing agentd..."
INSTALL_DIR="$HOME/.agentd-install"
rm -rf "$INSTALL_DIR"
git clone --depth 1 --quiet https://github.com/NickCalabs/agentd.git "$INSTALL_DIR"
cd "$INSTALL_DIR"
npm install --production --silent 2>/dev/null
npm link --silent 2>/dev/null
echo "âœ“ agentd installed. Run 'agentd start' to begin."